source 'https://rubygems.org'

#servidor web mas rapido
gem 'thin'
#gema para asignar permisos (manejo de roles)
gem 'cancancan', '~> 1.9'
#para manejo de usuarios
gem 'devise'
# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.4'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc

gem 'gcm'
gem 'bootstrap-sass'

gem "font-awesome-rails"

gem 'bootstrap_form'

gem 'angularjs-rails'

#Versionamiento de datos, se ocupará para manejar la sincronización con los dispositivos móviles
gem 'paper_trail', '~> 3.0.6'


#Para vista kanban
gem 'jquery-ui-rails'

# Registros en consola como tabla => Hirb.enable
gem 'hirb'

# Para correr métodos por atrás
gem 'delayed_job_active_record'

# Para poder hacer la importacion saltando los callbacks
gem 'sneaky-save', '~> 0.1.0'

# bootstrap switches
gem "bootstrap-switch-rails"

# libreria js para fechas
gem 'datejs-rails'

# qTip2
gem 'jquery-qtip2-rails'

# gemas para hacer debug mas facil
group :development do
	# Registros en consola con colores => AwesomePrint.irb!
	gem 'awesome_print'
	# Registros en consola como tabla => Hirb.enab
	# Muy buen debug en ejecucion
	gem 'better_errors'
	gem 'binding_of_caller'
	# Metricas
	gem 'metric_fu' 

	# Use sqlite3 as the database for Active Record
	gem 'sqlite3'
end

group :production do
	gem 'unicorn'
	gem 'daemons'
	gem 'rails_12factor'
	gem 'puma'
	gem 'pg'
end

