<div class="row">
	<div class="col-md-12">
		<h1>Usuarios</h1>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<table class="table">
			<thead>
				<th>ID</th>
				<th>Nombre</th>
				<th>Categoria</th>
				<th>NÂ° de proyectos</th>
				<th>Tareas asignadas</th>
				<th>Reportes</th>
				<th>Comentarios</th>
				<th></th>
			</thead>
			<% @users.each do |u| %>
				<tr>
					<td><%= u.id %></td>
					<td><%= u.f_name %></td>
					<td><%= u.super_admin ? 'Super admin' : 'Usuario normal' %></td>
					<td><%= u.projects.count %></td>
					<td><%= u.tasks.count %></td>
					<td><%= u.reports.count %></td>
					<td><%= u.comments.count %></td>
					<td><%= link_to 'X', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</table>
		<%= link_to_modal 'Nuevo usuario', new_user_path %>
	</div>
</div>