
<h1>Asignar usuario a proyectos</h1>

<%= form_tag(assign_to_project_user_path, method: "post") do %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td class="td1">

          <%= check_box("tag", project.id, { checked: @user.projects.include?(project)}) %>
          <%= project.name %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
</div>

  <%= submit_tag("Asignar") %>
<% end %>






