
<div class="container">
  <h1>Usuarios</h1>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th class="col-lg-3">Nombre</th>
          <th class="col-lg-2">Email</th>
          <th class="col-lg-1"></th>                   
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
       <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'X', user, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>      
  </div>
</div>

<br>
