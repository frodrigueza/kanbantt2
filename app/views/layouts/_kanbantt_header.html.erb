<div class="full kanbantt_header">
	<!-- izquierda -->
	<table class="kanbantt left">
		<tr>
			<!-- LEFT IMAGE KANBANTT -->
			<td><%= image_tag('kanbantt_blanco.png')%></td>
		</tr>
	</table>




	<!-- derecha -->
	<table class="user_and_notifications right">
		<tr>
			<!-- notifications -->
			<td>
				<%= link_to (current_user) do %>
					<span class="glyphicon glyphicon-bell user_icon" title="Compromisos atrasados"></span>
					<% if current_user.f_delayed_commitments_count != '' %>
						<span class="user_icon_counter"><%= current_user.f_delayed_commitments_count %></span>
					<% end %>
				<% end %>
			</td>
			<!-- user session -->
			<td>
				<div class="user_menu">
					<!-- Split button -->
					<div class="btn-group">
						<button type="button user_name" class="btn">
							<%= current_user.f_name %>
						</button>
						<button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							<span class="caret"></span>
							<span class="sr-only">Toggle Dropdown</span>
						</button>
						<ul class="dropdown-menu" role="menu">
							<li><%= link_to 'Mi perfil', current_user %></li>
							<li class="divider"></li>
							<li><%= link_to('Cerrar SesiÃ³n', destroy_user_session_path, :method => :delete) %></li>
						</ul>
					</div>
				</div>
			</td>
		</tr>
	</table>
</div>