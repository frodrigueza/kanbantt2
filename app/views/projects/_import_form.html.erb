<%= bootstrap_form_for(@project, layout: :horizontal) do |f| %>

  <%= f.text_field :name , label: 'Nombre del proyecto' %>
  <!-- TIPO DE RECURSOS     -->
  <%= f.select :resources_type, [['Seleccionar', ''],['Sin recursos, solo tiempo', 0], ['Dolares', 1], ['UF', 2], ['Horas Hombres', 3]], :label => 'Tipo de Recursos *', required: true %>

  <!-- IMPORTACIÃ“N -->
  <%= f.file_field :xml_file , :label => 'Archivo MS Project', :accept =>'text/xml' %>

  <!-- OWNER -->
  <%= f.hidden_field :owner_id, value: @project.owner_id %>

  <%= f.form_group do %>
  	<%= f.submit "Importar proyecto" %>
  <% end %>
<% end %>
 