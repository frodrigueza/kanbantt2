<div class="row">
  <div class="col-md-12">
    <h1><%= @project.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    Dueño: <%= @project.owner.f_name %>
  </div>
</div>


<div class="row">
	<div class="col-md-12">
		<h2>Usuarios</h2>
	</div>
</div>
<div class="row">
  <div class="col-md-6">
  	<table class="table">
  		<thead>
  			<th>Nombre</th>
  			<th>Rol</th>
  			<th>N° de reportes</th>
  			<th></th>
  			<th></th>
  		</thead>
	    <% @users.each do |u| %>
	    	<tr>
	    		<td><%= u.f_name %></td>
	    		<td><%= u.f_role_in_project(@project) %></td>
	    		<td><%= u.reports_in_project(@project).count %></td>
	    		<td><%= link_to 'Detalles', assignment_path(u.assignment_in_project(@project).id) %></td>
	    		<% if !u.super_admin && (@project.owner == current_user || current_user.super_admin) %>
	    			<td><%= link_to_modal 'Editar asignación', edit_assignment_path(u.assignment_in_project(@project).id) %></td>
	    		<% end %>
	    	</tr>
	    <% end %>
  	</table>
  </div>
</div>


<div class="row">
	<div class="col-md-12">
		<% if @project.owner == current_user %>
			<%= link_to_modal 'Agregar usuario', new_assignment_path(project_id: @project.id) %>
		<% end %>
	</div>
</div>