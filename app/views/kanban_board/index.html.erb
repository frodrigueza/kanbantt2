<div id="kanban_board">
	<div class="row" id="kanban_filters">
		<div class="col-md-12">
			<%= render 'kanban_board/filters'  %>
		</div>
	</div>
	<div class="row">

		<!-- INACTIVO -->
		<div class="col-md-4 column" id="inactive_kanban_column">
			<div class="full column_title">
				<table>
					<tr>
						<td><h3>Pedidos</h3></td>
						<td class="counter">(<span id="inactive_counter"></span> <%= @project.f_resources_type %>)</td>
					</tr>
				</table>
			</div>
			<div class="full kanban_column_content">
				<ul class="full sortable_group">
					<% @to_do_tasks.each do |t| %>
						<div id="kanban_item_<%= t.id %>" class="sortable_kanban_item">
							<%= render 'kanban_item', task: t %>
						</div>
					<% end %>
				</ul>
			</div>
		</div>

		<!-- EN PROGRESO -->
		<div class="col-md-4 column" id="in_progress_kanban_column">
			<div class="full column_title">
				<table>
					<tr>
						<td><h3>Acuerdos</h3></td>
						<td class="counter">(<span id="in_progress_counter"></span> <%= @project.f_resources_type %>)</td>
					</tr>
				</table>
			</div>
			<div class="full kanban_column_content">
				<ul class="full sortable_group">
					<% @doing_tasks.each do |t| %>
						<div id="kanban_item_<%= t.id %>" class="sortable_kanban_item">
							<%= render 'kanban_item', task: t %>
						</div>
					<% end %>
				</ul>
			</div>
		</div>

		<!-- FINALIZADO -->
		<div class="col-md-4 column" id="done_kanban_column">
			<div class="full column_title">
				<table>
					<tr>
						<td><h3>Entregados</h3></td>
						<td class="counter">(<span id="done_counter"></span> <%= @project.f_resources_type %>)</td>
					</tr>
				</table>
			</div>
			<div class="full kanban_column_content">
				<ul class="full sortable_group">
					<% @done_tasks.each do |t| %>
						<div id="kanban_item_<%= t.id %>" class="sortable_kanban_item">
							<%= render 'kanban_item', task: t %>
						</div>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
