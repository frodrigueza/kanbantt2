<div class="marcador_proyecto">
	<%= task.project.name %>
</div>
<div class="user_kanban" >
	<%= image_tag image_kanban(task.user), :title => task.user.try(:name) %>

	<% if task.project.resources %>
		<div class="nombre_usuario" align="center">
			<%= number_with_delimiter(task.resources_cost.to_i) %> <%= task.project.f_resources_type %>
		</div>
	<% end %>
</div>
