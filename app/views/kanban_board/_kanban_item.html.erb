<li class="kanban_item item" data-startdate="<%= task.expected_start_date %>" data-enddate="<%= task.expected_end_date %>" data-status="<%= 'delayed' if task.delayed  %>" data-pin-status="<%= task.urgent %>" data-name="<%= task.name %>">
	<div class="row task_header">
		<%= render 'kanban_board/task_header', task: task %>		
	</div>

    <div class="row task_name">
    	<div class="col-md-12">
			<%= link_to_modal task.name , task %>
    	</div>
	</div>

	<div class="task_footer">
		<table>
			<tr>
				<td class="<%= css_task_status_color(task) %>"><%= remaining_days(task) %></td>
				<% if task.progress != 100 %>
					<td class="real_progress <%= css_task_status_color(task) %>"><%= task.expected_progress %> %</td>
					<td class="expected_progress"><%= task.progress %> %</td>
				<% end %>
			</tr>
		</table>
	</div>
</li>