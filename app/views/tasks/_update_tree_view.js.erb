// actualizamos todos lo items del tree_view 

<% if @task %>
	<% @task.ancestry.each do |t| %>
		$('#content_<%= t.id %>').html('<%= escape_javascript(render "projects/explorer/content", task: t) %>');
	<% end %>
<% else %>
	<% @project.tasks.each do |t| %>
		$('#content_<%= t.id %>').html('<%= escape_javascript(render "projects/explorer/content", task: t) %>');
	<% end %>
<% end %>