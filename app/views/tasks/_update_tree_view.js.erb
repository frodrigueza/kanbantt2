// actualizamos los items del tree_view 

<% if @task %>
	<% @task.ancestry.each do |t| %>
		$('#item_<%= t.id %>').replaceWith('<%= escape_javascript(render "projects/explorer/tree_view_column_item", task: t) %>');
	<% end %>
<% else %>
	<% @project.tasks.each do |t| %>
		$('#content_<%= t.id %>').replaceWith('<%= escape_javascript(render "projects/explorer/content", task: t) %>');
	<% end %>
<% end %>